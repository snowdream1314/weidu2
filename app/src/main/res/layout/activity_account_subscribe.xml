<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:context="com.caibo.weidu.main.account.subscribe.AccountSubscribeActivity" >

        <!-- 标题栏 -->
        <include layout="@layout/layout_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 您可以在微信中订阅该公众号"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#989898"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_subscribe_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_open_wx_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/openwx_select" />
                <TextView
                    android:id="@+id/tv_openwx_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="打开微信"
                    android:textColor="#64de4c" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@mipmap/subscribe_row"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_contacts_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/contacts_icon" />
                <TextView
                    android:id="@+id/tv_contacts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="通讯录"
                    android:textColor="#515151" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@mipmap/subscribe_row"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_add_friends_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/add_friends_icon" />
                <TextView
                    android:id="@+id/tv_addfriends_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="添加朋友"
                    android:textColor="#515151" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@mipmap/subscribe_row"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_subscribe_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/subscribe_icon" />
                <TextView
                    android:id="@+id/tv_subscribe_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="订阅"
                    android:textColor="#515151" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_subscribe_selectedImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@mipmap/open_wx"/>

        <Button
            android:id="@+id/bt_subscribe_openwx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_button"
            android:layout_marginTop="20dp"
            android:text="打开微信"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>
